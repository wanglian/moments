<div id="<%= dom_id note %>" data-controller="lightbox" data-lightbox-options-value='{"selector": "a img"}'>
  <h2><%= time_tag note.created_at, "data-local": "time-or-date" %></h2>
  <p>
    <%= note.content %>
  </p>

  <% if authenticated? %>
    <div>
      <%= link_to "Edit", edit_note_path(note) %> |

      <%= link_to "Delete", note, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
    </div>
  <% end %>
</div>
